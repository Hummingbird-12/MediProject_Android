<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Base Layout Widgets SETUP -->
    <style name="linearViewFull" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    <!-- <item name="android:fontFamily">@font/noto_sans_cjk_kr_regular</item> -->

    <style name="titleBar" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0px</item>
        <item name="android:layout_weight">2</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:background">#004B87</item>
    </style>

    <style name="btnNav" >
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_margin">10sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/capsule</item>
    </style>

    <style name="btnPrev" parent="@style/btnNav" >
        <item name="android:layout_alignParentLeft">true</item>
        <!-- <item name="android:layout_alignParentStart">true</item> -->
        <item name="android:onClick">onPrevClick</item>
    </style>

    <style name="btnNext" parent="@style/btnNav" >
        <item name="android:layout_alignParentRight">true</item>
        <!-- <item name="android:layout_alignParentEnd">true</item> -->
        <item name="android:onClick">onNextClick</item>
    </style>
    <!-- Base Layout Widgets END -->

    <!-- 3 Image Layout SETUP -->
    <style name="linearViewHoriz">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0px</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="linearViewContent" parent="@style/linearViewHoriz" >
        <item name="android:layout_weight">7</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_margin">20dp</item>
    </style>

    <style name="linearViewBottom" parent="@style/linearViewHoriz">
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="img" >
        <item name="android:layout_width">0px</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_below">@id/titleBar</item>
        <item name="android:layout_above">@id/btnPrev</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="imgLeft" parent="@style/img">
        <item name="android:layout_alignParentLeft">true</item>
        <!-- <item name="android:layout_alignParentStart">true</item> -->
    </style>

    <style name="imgCenter" parent="@style/img">
        <item name="android:layout_centerHorizontal">true</item>
        <!-- <item name="android:layout_alignParentStart">true</item> -->
    </style>

    <style name="imgRight" parent="@style/img">
        <item name="android:layout_alignParentRight">true</item>
        <!-- <item name="android:layout_alignParentEnd">true</item> -->
    </style>
    <!-- 3 Image Layout END -->

    <!-- ina style -->

    <style name="Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:background">@color/Blue</item>
    </style>

    <style name="Bt_prev">
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_margin">10sp</item>
        <item name="android:text">이전</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:background">@drawable/capsule</item>
    </style>

    <style name="Bt_next">

        <item name="android:layout_width">140dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_margin">10sp</item>
        <item name="android:text">다음</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:background">@drawable/capsule</item>
    </style>

    <style name="Content">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">10sp</item>
    </style>

    <style name="CenterText">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_margin">15sp</item>
    </style>

    <style name="Body">
        <item name="android:layout_below">@+id/title</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="Menu">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_height">50sp</item>
        <item name="android:layout_width">150sp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:background">@color/Green</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- ina style END -->

</resources>
