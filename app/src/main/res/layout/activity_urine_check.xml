<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/linearViewScreen">

    <ImageView
        style="@style/titleBanner"
        android:src="@drawable/white_logo_2"/>

    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="5"
        android:layout_marginHorizontal="50sp"

        android:layout_weight="6"
        android:layout_width="match_parent"
        android:layout_height="0sp">

        <RadioButton
            android:id="@+id/c1"
            android:textSize="40sp"
            android:text="정상"
            android:textAlignment="center"
            android:layout_weight="1"
            android:layout_width="0sp"
            android:layout_height="match_parent" />

        <RadioButton
            android:id="@+id/c2"
            android:textSize="40sp"
            android:text="거품뇨"
            android:textAlignment="center"
            android:layout_weight="1"
            android:layout_width="0sp"
            android:layout_height="match_parent" />


        <RadioButton
            android:id="@+id/c3"
            android:textSize="40sp"
            android:textAlignment="center"
            android:text="혈뇨"
            android:layout_weight="1"
            android:layout_width="0sp"
            android:layout_height="match_parent" />


        <RadioButton
            android:id="@+id/c4"
            android:textSize="30sp"
            android:textAlignment="center"
            android:text="거품뇨/혈뇨는 아니지만,정상 소변은 아닌 것 같습니다"
            android:layout_weight="2"
            android:layout_width="0sp"
            android:layout_height="match_parent" />


    </LinearLayout>
    <RelativeLayout
        style="@style/linearViewBot">
        <Button
            android:id="@+id/Bnt_prev"
            style="@style/buttonPrev"
            android:text="이전"/>

        <Button
            android:id="@+id/Bnt_next"
            style="@style/buttonNext"
            android:text="등록"/>

    </RelativeLayout>

</LinearLayout>
