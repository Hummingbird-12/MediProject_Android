<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/linearViewFull"
    android:background="@color/Back"
    tools:context=".RecordLiquidActivity">

    <RelativeLayout
        style="@style/titleBanner">

        <TextView
            android:id="@+id/p_name"
            style="@style/title_pname"/>

        <TextView style="@style/title_jay" />

        <ImageView
            android:src="@drawable/white_logo_2"
            style="@style/title_logo"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_weight="6"
        style="@style/linearViewContent"
        android:baselineAligned="false">

        <ListView
            android:background="#f0f0f0"
            android:id="@+id/menuList"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:numColumns="1"
            android:verticalSpacing="10dp"
            android:horizontalSpacing="10dp">
     </ListView>

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:weightSum="6"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_margin="20dp">

            <TextView
                android:layout_weight="1"
                android:id="@+id/menu_name"
                android:textColor="@color/Green"
                android:textStyle="bold"
                android:gravity="bottom"
                android:layout_gravity="center_horizontal"
                android:textSize="40sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/drinkPrompt"
                android:textSize="30sp"
                android:textAlignment="center"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_weight="4"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0sp">

                    <TextView
                        android:layout_gravity="center"
                        android:id="@+id/minus"
                        android:text="-"
                        android:backgroundTint="@color/Green"
                        style="@style/Bt_consume"/>

                    <TextView
                        android:id="@+id/drinkPrint"
                        android:background="@drawable/round"
                        android:backgroundTint="@color/Gray2"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"
                        android:text="음식을 선택하세요"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="30sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_gravity="center"
                        android:id="@+id/plus"
                        android:text="+"
                        android:backgroundTint="@color/Green"
                        android:layout_toRightOf="@+id/minus"
                        style="@style/Bt_consume"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        style="@style/linearViewBot">
        <Button
            android:id="@+id/Bnt_prev"
            style="@style/buttonPrev"
            android:text="이전"/>

        <Button
            android:id="@+id/Bnt_next"
            style="@style/buttonNext"
            android:text="등록"/>

    </RelativeLayout>

</LinearLayout>