<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/linearViewFull"
    android:background="@color/Back"
    tools:context=".RecordLiquidActivity">

    <ImageView
        style="@style/titleBanner"
        android:src="@drawable/logo_white"/>


    <LinearLayout
        android:layout_weight="6"
        style="@style/linearViewContent"
        android:baselineAligned="false">

        <ListView
            android:background="#f0f0f0"
            android:id="@+id/menuList"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:numColumns="1"
            android:verticalSpacing="10dp"
            android:horizontalSpacing="10dp">
     </ListView>

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_margin="20dp">

            <TextView
                android:layout_weight="1"
                android:id="@+id/menu_name"
                android:textColor="@color/Green"
                android:textStyle="bold"
                android:gravity="bottom"
                android:layout_gravity="center_horizontal"
                android:textSize="40sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/drinkPrompt"
                android:textSize="30sp"
                android:textAlignment="center"
                android:textStyle="bold"/>

            <EditText
                android:layout_weight="1"
                android:id="@+id/drinkPrint"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/drinkHint"
                android:textSize="30sp"
                android:textStyle="bold"
                android:inputType="numberDecimal" />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        style="@style/linearViewBot">
        <Button
            android:id="@+id/Bnt_prev"
            style="@style/buttonPrev"
            android:text="이전"/>

        <Button
            android:id="@+id/Bnt_next"
            style="@style/buttonNext"
            android:text="등록"/>

    </RelativeLayout>

</LinearLayout>