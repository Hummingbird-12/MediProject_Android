<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/linearViewScreen">

    <RelativeLayout
        style="@style/titleBanner">

        <TextView
            android:id="@+id/p_name"
            style="@style/title_pname"/>

        <TextView style="@style/title_jay" />

        <ImageView
            android:src="@drawable/white_logo_2"
            style="@style/title_logo"/>
    </RelativeLayout>

    <RadioGroup
        android:layout_weight="6"
        android:weightSum="5"
        android:orientation="horizontal"
        android:layout_marginHorizontal="20sp"
        android:layout_width="match_parent"
        android:layout_height="0sp">


        <RadioButton
            android:id="@+id/c1"
            style="@style/prompt"
            android:text="정상"
            android:textAlignment="center"
            android:layout_weight="1"
            android:layout_width="0sp"
            android:layout_height="match_parent" />

        <RadioButton
            android:id="@+id/c2"
            style="@style/prompt"
            android:text="혈변"
            android:textAlignment="center"
            android:layout_weight="1"
            android:layout_width="0sp"
            android:layout_height="match_parent" />


        <RadioButton
            android:id="@+id/c3"
            style="@style/prompt"
            android:textAlignment="center"
            android:text="설사"
            android:layout_weight="1"
            android:layout_width="0sp"
            android:layout_height="match_parent" />


        <RadioButton
            android:id="@+id/c4"
            android:textSize="30sp"
            android:textAlignment="center"
            android:text="혈변/설사는 아니지만, 정상 대변은 아닌 것 같습니다"
            android:layout_weight="2"
            android:layout_width="0sp"
            android:layout_height="match_parent" />
    </RadioGroup>

    <RelativeLayout
        style="@style/linearViewBot">
        <Button
            android:id="@+id/Bnt_prev"
            style="@style/buttonPrev"
            android:text="이전"/>

        <Button
            android:id="@+id/Bnt_next"
            style="@style/buttonNext"
            android:text="등록"/>

    </RelativeLayout>

</LinearLayout>
