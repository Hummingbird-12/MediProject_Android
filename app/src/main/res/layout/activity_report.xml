<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:weightSum="10"
    android:orientation="vertical"
    android:background="@color/Back"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        style="@style/titleBanner"
        android:src="@drawable/logo_white"/>


    <RelativeLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="6"
        style="@style/Body">

        <RelativeLayout
            android:id="@+id/ll"
            android:layout_marginBottom="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_report_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8월 4일 인아님 기록"
                android:layout_centerInParent="true"
                android:textSize="20sp" />

            <Button
                android:id="@+id/bt_edit"
                android:layout_centerVertical="true"
                android:layout_margin="20sp"
                android:text="  수정  "
                android:textSize="20dp"
                android:textColor="@color/White"
                android:layout_toRightOf="@+id/tv_report_date"
                android:backgroundTint="@color/Green"
                android:layout_width="wrap_content"
                android:layout_height="50sp"/>

        </RelativeLayout>
        <ListView

            android:id="@+id/ReportList"
            android:layout_below="@+id/ll"
            android:layout_marginHorizontal="80sp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
        </ListView>
    </RelativeLayout>

    <RelativeLayout
        style="@style/linearViewBot">
        <Button
            android:id="@+id/Bnt_prev"
            style="@style/buttonPrev"
            android:text="처음으로"/>

    </RelativeLayout>

</LinearLayout>