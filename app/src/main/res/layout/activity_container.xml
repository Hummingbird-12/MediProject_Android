<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/linearViewFull"
    tools:context=".ContainerSelectActivity">

    <TextView
        android:id="@+id/titleBar"
        style="@style/titleBar"
        android:text="@string/containerTitle" />

    <LinearLayout
        style="@style/linearViewContent">

        <ImageButton
            android:id="@+id/imgDiaper"
            style="@style/imgLeft"
            android:src="@drawable/container_diaper"
            android:contentDescription="@string/containerDiaperDescription"/>

        <ImageButton
            android:id="@+id/imgBottle"
            style="@style/imgCenter"
            android:src="@drawable/container_bottle"
            android:contentDescription="@string/containerBottleDescription" />

        <ImageButton
            android:id="@+id/imgGreen"
            style="@style/imgRight"
            android:src="@drawable/container_green"
            android:contentDescription="@string/containerGreenDescription"/>

    </LinearLayout>

    <LinearLayout
        style="@style/linearViewBottom">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnPrev"
                style="@style/btnPrev"
                android:text="@string/prev" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>