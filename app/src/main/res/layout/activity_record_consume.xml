<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
style="@style/linearViewScreen">

    <ImageView
    style="@style/titleBanner"
    android:src="@drawable/logo_white"/>

    <RadioGroup
        android:layout_marginTop="10sp"
        android:id="@+id/consume_check"
        android:layout_weight="2"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/c1"
            android:text="아침"
            style="@style/Content"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <RadioButton
            android:id="@+id/c2"
            android:text="점심"
            style="@style/Content"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <RadioButton
            android:id="@+id/c3"
            android:text="저녁"
            style="@style/Content"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <RadioButton
            android:id="@+id/c4"
            android:text="기타"
            style="@style/Content"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RadioGroup>

    <ListView
        android:id="@+id/ConsumeList"
        android:layout_weight="4"
        android:layout_marginHorizontal="100sp"
        android:layout_marginVertical="10sp"
        android:layout_width="match_parent"
        android:layout_height="0sp">

    </ListView>

<RelativeLayout
    style="@style/linearViewBot">
    <Button
        android:id="@+id/Bnt_prev"
        style="@style/buttonPrev"
        android:text="TEST1"/>

    <Button
        android:id="@+id/Bnt_next"
        style="@style/buttonNext"
        android:text="TEST2"/>

</RelativeLayout>

</LinearLayout>
